/* pages/night/night.wxss */

.night_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.night_content {
  text-align: center;
}

.problem {
  margin-top: 50rpx;
  font-size: 48rpx;
  text-align: right;
}

.night_bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  z-index: -1;
}

.select_item {
  margin: 60rpx 0 60rpx 200rpx; 
  padding: 10rpx 40rpx;
  border: 1px solid #ddd;
  text-align: left;
  font-size: 40rpx;
}

.mt {
  margin-top: 90rpx;
}

.night_container .select_item.on {
  background: rgb(229, 193, 129);
}