.second_container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.problem {
  align-self: center;
  font-size: 48rpx;
}

.second_content {
  position: absolute;
  top: 50%;
  text-align: center;
}

.second_bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  z-index: -1;
}

.answer {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
}

.select_item {
  border: 1px solid #ddd;
  box-sizing: border-box;
  flex: 0 40%;
  padding: 10rpx 20rpx;
  margin: 40rpx 10rpx 0 48rpx;
  font-size: 38rpx;
}

.second_container .select_item.on {
  background: rgb(229, 193, 129);
}
